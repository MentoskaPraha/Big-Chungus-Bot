{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"rootDir": "./src",
		"outDir": "./build",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"baseUrl": "src",
		"paths": {
			"$lib/*": ["lib/*"],
			"$config": ["config.json"],
			"$events": ["events/_eventList"],
			"$commands": ["commands/_commandList"]
		}
	}
}

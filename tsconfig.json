{
	"include": ["src/**/*"],
	"exclude": ["node_modules", "scripts"],
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"rootDir": "./src",
		"outDir": "./build",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"baseUrl": "src",
		"paths": {
			"@libs/*": ["libs/*"],
			"@utils/*": ["libs/utils/*"],
			"$types": ["types.d.ts"],
			"$config": ["config.json"]
		}
	},
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}

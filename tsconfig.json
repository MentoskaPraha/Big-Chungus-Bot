{
	"include": ["src/**/*"],
	"exclude": ["node_modules", "scripts"],
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"rootDir": "./src",
		"outDir": "./build",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"baseUrl": "src",
		"paths": {
			"$lib/*": ["lib/*"],
			"$config": ["config.json"],
			"$events": ["events/_eventList.ts"],
			"$commands": ["commands/_commandList.ts"]
		}
	},
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}

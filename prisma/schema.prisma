generator dev {
    provider      = "prisma-client-js"
    output        = "../src/lib/prisma-client"
    binaryTargets = ["native"]
}

generator prodAMD64 {
    provider      = "prisma-client-js"
    output        = "../build/lib/prisma-client"
    binaryTargets = ["debian-openssl-1.1.x"]
}

generator prodARM64 {
    provider      = "prisma-client-js"
    output        = "../build/lib/prisma-client"
    binaryTargets = ["linux-arm64-openssl-1.1.x"]
}

datasource db {
    provider = "mongodb"
    url      = env("DISCORD_BOT_DB_URI")
}

model guildDB {
    id                             String   @id @default(auto()) @map("_id") @db.ObjectId
    announcementRoleId             String   @default("N/A")
    colorSettingsEnabled           Boolean  @default(false)
    colorSettingsRoleIds           String[] @default(["N/A"])
    eventAnnounceSettingsChannelId String   @default("N/A")
    eventAnnounceSettingsCrosspost Boolean  @default(false)
    eventAnnounceSettingsEnabled   Boolean  @default(false)
    guildId                        String   @unique
    moderatorRoleId                String   @default("N/A")
    settingsManagerRoleId          String   @default("N/A")
}

model userDB {
    id     String @id @default(auto()) @map("_id") @db.ObjectId
    color  Int    @default(0)
    title  String @default("Titleless")
    userId String @unique
}

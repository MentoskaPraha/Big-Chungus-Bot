	},
	"devDependencies": {
		"@types/node": "^18.11.9",
		"@typescript-eslint/eslint-plugin": "^5.48.2",
		"@typescript-eslint/parser": "^5.48.2",
		"dotenv": "^16.0.1",
		"eslint": "^8.32.0",
		"prettier": "2.8.3",
		"shelljs": "^0.8.5",
		"typescript": "^4.8.4",
		"ts-node": "^10.9.1"
	}
}

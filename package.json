{
	"name": "big-chungus-bot",
	"private": true,
	"scripts": {
		"prebuild": "prisma generate",
		"build": "tsc && tsc-alias && node -e 'require(\"shelljs\").cp(\"-R\", \"src/config.json\", \"build/\");' && node -e 'require(\"shelljs\").cp(\"-R\", \"src/lib/prisma-client/\", \"build/lib\");'",
		"pretest": "prisma generate",
		"test": "ts-node -r dotenv/config ./src/index.ts",
		"prelint": "prettier --write .",
		"lint": "prettier --check . && eslint . --ext .ts --ignore-path .gitignore",
		"format": "prettier --write .",
		"start": "node ./src/index.js"
	},
	"dependencies": {
		"discord.js": "^14.9.0",
		"pino": "^8.11.0",
		"pino-pretty": "^10.0.0"
	},
	"devDependencies": {
		"@prisma/client": "^4.13.0",
		"@types/node": "^18.15.11",
		"@typescript-eslint/eslint-plugin": "^5.59.0",
		"@typescript-eslint/parser": "^5.59.0",
		"dotenv": "^16.0.3",
		"eslint": "^8.38.0",
		"prettier": "^2.8.7",
		"prettier-plugin-prisma": "^4.13.0",
		"prisma": "^4.13.0",
		"shelljs": "^0.8.5",
		"ts-node": "^10.9.1",
		"tsc-alias": "^1.8.6",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.0.4"
	}
}
